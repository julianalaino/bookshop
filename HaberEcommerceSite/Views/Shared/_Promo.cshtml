<div class="row mt-5">

    <div class="col-10 offset-1">

        <div class="row">

            <div class="col-10 offset-1">

                <h3 class="text-center">Aprovechá nuestras íncreibles promociones!</h3>

            </div>

        </div>

        @{
        var list = ViewBag.promos as IList<PromoViewModel>;
        var items = list.Take(4);
        }



        <div class="row">
            @foreach (var item in items)
        {
            <div class="col-sm-3">

                <div class="card border-0">

                    <img class="card-img-top mx-auto book-size" src=@Url.Content(item.ImagePath) alt="Caratula del libro">

                    <div class="card-body text-center">

                        <h5 class="card-title">

                            <a href="@Url.Action("PromoDescription", "Site", new { ID = item.ID })">@item.Title</a>

                        </h5>
                        <p class="font-weight-bold">$  @string.Format("{0:#.00}", @item.Price)</p>

                    </div>

                </div>

            </div>
    }




        </div>
        <div class="container">
            <div class="row ">
                <div class="col-md offset-md-10">
                    <a href="@Url.Action("MorePromos", "Site")" class="btn btn-primary">Ver más...</a>
                </div>
            </div>
            </div>

        </div>
    </div>
        


























