@model HaberEcommerceSite.Data.Entities.Editorial

@{ Layout = "_PanelLayout"; }

<div class="card">

    <div class="card-body">

        <h4 class="card-title">Nueva Editorial</h4>

        @using (Html.BeginForm("Create", "Editorial", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="row m-5">

                <div class="col-sm-4 pr-3">

                    @Html.LabelFor(model => model.Description, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="form-group">

                <div class="col-sm-10 m-5">

                    <input type="submit" value="Crear" class="btn btn-primary" />

                </div>

            </div>

        }

    </div>

</div>
